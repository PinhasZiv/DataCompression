<MyGrid>

    first: first
    last: last

    GridLayout:
        cols: 1
        size: root.width - 100, root.height - 100
        pos: 50, 50
        GridLayout:
            cols: 2

            Label:
                text: "First Name"
            TextInput:
                id: first
                multiline: False

            Label:
                text: "Last Name"
            TextInput:
                id: last
                multiline: False

        Button:
            text: "submit"
            on_press: root.btn()